{
  "name": "lynx-keymap",
  "displayName": "Lynx Keymap Pro",
  "description": "Available now: VSCode • Cursor • Windsurf • Trae.ai • Kiro & (Firebase Studio)... 雨",
  "version": "2.1.0",
  "publisher": "bastndev",
  "license": "MIT",
  "engines": {
		"vscode": "^1.74.0"
  },
  "categories": ["Keymaps", "Other"],
  "keywords": [
    "keybindings",
    "keymap",
    "keyboard pro",
    "shortcuts",
    "productivity",
    "windows",
    "linux",
    "macos",
    "2025"
  ],
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#0a0a0a",
    "theme": "dark"
  },
  "homepage": "https://github.com/bastndev/Lynx-Keymap-Pro#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/bastndev/Lynx-Keymap-Pro"
  },
  "bugs": {
    "url": "https://github.com/bastndev/Lynx-Keymap-Pro/issues"
  },
  "author": {
    "name": "Gohit Bastian",
    "email": "gobasdev@gmail.com",
    "url": "https://bastndev.com"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/bastndev"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "keybindings": [
      {
        "key"    : "ctrl+1",
        "mac"    : "cmd+1",
        "command": "workbench.view.explorer"
      },{
        "key"    : "ctrl+2",
        "mac"    : "cmd+2",
        "command": "workbench.view.scm"
      },{
        "key"    : "ctrl+3",
        "mac"    : "cmd+3",
        "command": "workbench.view.extensions"
      },{
        "key"    : "ctrl+4",
        "mac"    : "cmd+4",
        "command": "lynx-keymap.checkF1QuickSwitch"
      },
      

      {
        "key"    : "alt+c",
        "mac"    : "alt+c",
        "command": "explorer.newFile"
      },{
        "key"    : "alt+v",
        "mac"    : "alt+v",
        "command": "explorer.newFolder"
      },{
        "key"    : "ctrl+tab",
        "mac"    : "cmd+tab",
        "command": "workbench.action.toggleSidebarVisibility"
      },


      {
        "key"    : "alt+1",
        "mac"    : "alt+1",
        "command": "git.stageAll",
        "when"   : "scmProvider == git"
      },{
        "key"    : "alt+2",
        "mac"    : "alt+2",
        "command": "lynx-keymap.generateAICommit",
        "when"   : "scmProvider == git"
      },{
        "key"    : "alt+3",
        "mac"    : "alt+3",
        "command": "git.unstageAll",
        "when"   : "scmProvider == git"
      },{
        "key"    : "alt+4",
        "mac"    : "alt+4",
        "command": "git.pull",
        "when"   : "scmProvider == git"
      },

      {
        "key"    : "alt+enter",
        "mac"    : "alt+return",
        "command": "git.commit",
        "when"   : "scmProvider == git"
      },{
        "key"    : "ctrl+alt+enter",
        "mac"    : "cmd+alt+return",
        "command": "git.push",
        "when"   : "scmProvider == git"
      },











      {
        "key"    : "alt+q",
        "mac"    : "alt+q",
        "command": "workbench.debug.action.toggleRepl"
      },{
        "key"    : "alt+w",
        "mac"    : "alt+w",
        "command": "workbench.action.terminal.toggleTerminal"
      },{
        "key"    : "alt+e",
        "mac"    : "alt+e",
        "command": "lynx-keymap.checkGitLens"
      },{
        "key"    : "alt+r",
        "mac"    : "alt+r",
        "command": "workbench.action.togglePanel"
      },


      {
        "key"    : "shift+alt+t",
        "mac"    : "shift+alt+t",
        "command": "workbench.action.selectTheme"
      },{
        "key"    : "shift+alt+r",
        "mac"    : "shift+alt+r",
        "command": "workbench.action.reloadWindow"
      },{
        "key"    : "shift+alt+e",
        "mac"    : "shift+alt+e",
        "command": "workbench.action.gotoLine"
      },{
        "key"    : "shift+alt+w",
        "mac"    : "shift+alt+w",
        "command": "expandLineSelection"
      },

      
      {
        "key"    : "alt+j",
        "mac"    : "alt+j",
        "command": "workbench.action.openSettings"
      },{
        "key"    : "ctrl+,",
        "mac"    : "cmd+,",
        "command": ""
      },{
        "key"    : "ctrl+j",
        "mac"    : "cmd+j",
        "command": "workbench.action.openSettingsJson"
      },


      {
        "key"    : "alt+f",
        "mac"    : "alt+f",
        "command": "editor.action.formatDocument"
      },{
        "key"    : "ctrl+alt+f",
        "mac"    : "cmd+alt+f",
        "command": "editor.action.formatSelection.multiple"
      },{
        "key"    : "shift+alt+f",
        "mac"    : "shift+alt+f",
        "command": "editor.action.organizeImports"
      },


      {
        "key"    : "ctrl+/",
        "mac"    : "cmd+/",
        "command": "editor.action.commentLine"
      },{
        "key"    : "alt+/",
        "mac"    : "alt+/",
        "command": "editor.action.blockComment"
      },


      {
        "key"    : "alt+shift+up",
        "mac"    : "alt+shift+up",
        "command": "editor.action.copyLinesUpAction"
      },{
        "key"    : "alt+shift+down",
        "mac"    : "alt+shift+down",
        "command": "editor.action.copyLinesDownAction"
      },{
        "key"    : "ctrl+up",
        "mac"    : "cmd+up",
        "command": "editor.action.insertCursorAbove"
      },{
        "key"    : "ctrl+down",
        "mac"    : "cmd+down",
        "command": "editor.action.insertCursorBelow"
      },


      {
        "key"    : "alt+p",
        "mac"    : "alt+p",
        "command": "workbench.action.debug.start"
      },{
        "key"    : "alt+o",
        "mac"    : "alt+o",
        "command": "workbench.action.debug.restart"
      },{
        "key"    : "alt+i",
        "mac"    : "alt+i",
        "command": "workbench.action.debug.stop"
      },


      {
        "key"    : "alt+l",
        "mac"    : "alt+l",
        "command": "git.viewChanges"
      },{
        "key"    : "alt+m",
        "mac"    : "alt+m",
        "command": "markdown.showPreviewToSide"
      },

      
      {
        "key"    : "ctrl+backspace",
        "mac"    : "cmd+backspace",
        "command": "deleteWordLeft",
        "when"   : "editorTextFocus"
      },{
        "key"    : "alt+backspace",
        "mac"    : "alt+backspace",
        "command": "workbench.action.terminal.sendSequence",
        "args"   : {"text": "\u0001\u000b"},
        "when"   : "terminalFocus"
      },{
        "key"    : "ctrl+delete",
        "mac"    : "cmd+delete",
        "command": "workbench.action.closeFolder"
      },











      {
        "key"    : "ctrl+[Backquote]",
        "mac"    : "cmd+[Backquote]",
        "command": "lynx-keymap.executeAIPopup"
      },{
        "key"    : "shift+tab",
        "mac"    : "shift+tab",
        "command": "lynx-keymap.openAndCloseAIChat"
      },{
        "key"    : "shift+escape",
        "mac"    : "shift+escape",
        "command": "workbench.action.toggleMaximizedAuxiliaryBar"
      },

      {
        "key"    : "alt+a",
        "mac"    : "alt+a",
        "command": "lynx-keymap.createNewAISession"
      },{
        "key"    : "alt+s",
        "mac"    : "alt+s",
        "command": "lynx-keymap.showAIHistory"
      },{
        "key"    : "alt+d",
        "mac"    : "alt+d",
        "command": "lynx-keymap.attachAIContext"
      },      

      {
        "key"    : "ctrl+alt+,",
        "mac"    : "cmd+alt+,",
        "command": "lynx-keymap.toggleStatusBarColor"
      },

      {
        "key"    : "alt+z",
        "mac"    : "alt+z",
        "command": "lynx-keymap.executeColorAndAgentMacro"
      },{
        "key"    : "alt+x",
        "mac"    : "alt+x",
        "command": "workbench.action.chat.openModelPicker"
      },


      {
        "key"    : "ctrl+enter",
        "mac"    : "cmd+return",
        "command": "-github.copilot.generate"
      },{
        "key"    : "alt+enter",
        "mac"    : "alt+return",
        "command": "inlineChat.close",
        "when"   : "inlineChatFocused"
      }
    ]
  },

  "commands": [
      {
        "command": "lynx-keymap.generateAICommit",
        "title"  : "Generate AI Commit Message"
      },
      {
        "command": "lynx-keymap.executeAIPopup",
        "title"  : "Open AI Chat Interface"
      },{
        "command": "lynx-keymap.openAndCloseAIChat",
        "title"  : "Open and Close AI Chat"
      },{
        "command": "lynx-keymap.createNewAISession",
        "title"  : "Create New AI Session"
      },{
        "command": "lynx-keymap.showAIHistory",
        "title"  : "Show AI Chat History"
      },{
        "command": "lynx-keymap.attachAIContext",
        "title"  : "Attach Context to AI Chat"
      },

      {
        "command": "lynx-keymap.executeColorAndAgentMacro",
        "title"  : "Execute Icon Color & Ask/Agent/Edit (Macro)"
      },
      {
        "command": "lynx-keymap.toggleStatusBarColor",
        "title"  : "Toggle (Status Bar) Color"
      },

      {
      "command": "lynx-keymap.checkF1QuickSwitch",
      "title"  : "Check F1-QuickSwitch Extension and Execute"
      },{
      "command": "lynx-keymap.checkGitLens",
      "title"  : "Check GitLens Extension and Execute"
      }
    ]
}
